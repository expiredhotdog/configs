configuration {
    font: "Source Code Pro 12";
}

* {
    ac: #384149;
    bg: #181e23;
    fg: #d5d5d5;
    background-color: @bg;
}

window {
    padding: 5px;
    width: 55%;
    height: 55%;
}

prompt {
    text-color:	@fg;
}

textbox-prompt-colon {
    expand: false;
    str: " - ";
    text-color:	inherit;
}

entry {
    spacing: 0;
    text-color: @fg;
}

inputbar {
    text-color:	@fg;
    children: [ prompt,textbox-prompt-colon,entry ];
}

listview {
    padding: 5px 5px 5px 5px;
    columns: 1;
}

element {
    border:	0px;
    border-radius: 0px;
    padding: 1px;
    text-color: @fg;
    background-color: @bg;
    children: [ element-icon, element-text ];
    spacing: 10px;
}

element selected {
    background-color: @fg;
    text-color: @bg;
}

element-icon {
    size: 1em;
}

element-text, element-icon {
    background-color: inherit;
    text-color: inherit;
}

